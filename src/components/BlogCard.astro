---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import FormattedDate from './FormattedDate.astro';

interface Props {
	href: string;
	title: string;
	pubDate: Date;
	heroImage?: ImageMetadata;
	featured?: boolean;
}

const { href, title, pubDate, heroImage, featured = false } = Astro.props;
---

<a href={href} class="block group">
		{heroImage && (
			<div class="overflow-hidden rounded-lg mb-3">
				<Image 
					width={featured ? 720 : 360} 
					height={featured ? 360 : 180} 
					src={heroImage} 
					alt="" 
					class="w-full transition-transform duration-200 group-hover:scale-105"
				/>
			</div>
		)}
		<h4 class={`font-semibold mb-2 group-hover:text-blue-600 transition-colors ${featured ? 'text-3xl' : 'text-xl'}`}>
			{title}
		</h4>
		<p class="text-gray-500 text-sm">
			<FormattedDate date={pubDate} />
		</p>
	</a>

