---
interface Props {
	href: string;
	variant?: 'primary' | 'secondary' | 'outline';
	class?: string;
}

const { href, variant = 'primary', class: className = '' } = Astro.props;

const variants = {
	primary: 'px-6 py-3 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition-colors font-medium',
	secondary: 'px-6 py-3 border-2 border-gray-900 text-gray-900 rounded-lg hover:bg-gray-100 transition-colors font-medium',
	outline: 'px-6 py-3 border-2 border-gray-400 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors',
};
---

<a href={href} class={`${variants[variant]} ${className}`}>
	<slot />
</a>

